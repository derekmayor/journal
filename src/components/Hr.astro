export interface Props {
  noPadding?: boolean;
  "aria-label"?: string;
  ariaLabel?: string; // Add compatibility alias
}

const { noPadding = false, "aria-label": ariaLabelProp, ariaLabel: ariaLabelAlias } = Astro.props;

// Prefer aria-label if provided, fallback to ariaLabel
const ariaLabel = ariaLabelProp || ariaLabelAlias;
---

<hr class="border-skin-line" aria-label={ariaLabel} />

<style>
  hr {
    @apply border-0 border-t border-skin-line;
  }
</style>

---
import type { HTMLAttributes } from "astro/types";

export interface Props extends HTMLAttributes<"a"> {
  disabled?: boolean;
  ariaLabel?: string;
  title?: string;
}

const { disabled = false, class: className, ariaLabel, title, ...attrs } = Astro.props;

const Button = disabled ? "span" : "a";
---

<Button
  class:list={[
    "group inline-block hover:text-skin-accent",
    className,
    { "opacity-50 cursor-not-allowed": disabled }
  ]}
  aria-label={ariaLabel}
  title={title}
  aria-disabled={disabled}
  {...attrs}
>
  <slot />
</Button>

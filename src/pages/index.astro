---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import { SITE } from "../config";

const posts = await getCollection("posts");
const sortedPosts = posts.sort(
  (a, b) =>
    new Date(b.data.pubDatetime).valueOf() -
    new Date(a.data.pubDatetime).valueOf()
);
---

<Layout title="Home">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 p-4 max-w-6xl mx-auto">
    <!-- Profile Card (Top Left) -->
    <div class="col-span-1 md:col-span-1 row-span-2 bg-white dark:bg-zinc-900 rounded-3xl p-6 border border-zinc-100 dark:border-zinc-800 flex flex-col items-center text-center shadow-sm">
      <div class="w-24 h-24 rounded-full bg-blue-500 mb-4 overflow-hidden">
        <img src="https://api.dicebear.com/9.x/bottts-neutral/png?seed=Derek" alt="Avatar" />
      </div>
      <h1 class="text-2xl font-bold mb-1">Derek Mayor</h1>
      <p class="text-zinc-500 dark:text-zinc-400 text-sm mb-4">System Orchestrator</p>
      <p class="text-sm text-zinc-600 dark:text-zinc-300 mb-6">
        "Connectivity is the foundation; features are secondary."
      </p>
      <div class="flex gap-2 mt-auto">
        <a href="https://github.com/derekmayor/journal" class="p-2 bg-zinc-100 dark:bg-zinc-800 rounded-full hover:bg-zinc-200 transition-colors">
          <span class="sr-only">GitHub</span>
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 2.16 1.44 1.065 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/></svg>
        </a>
      </div>
    </div>

    <!-- Latest Journal (Top Right - Large) -->
    <div class="col-span-1 md:col-span-2 row-span-1 bg-zinc-900 text-white rounded-3xl p-8 relative overflow-hidden group">
      <div class="absolute top-0 right-0 p-4 opacity-10 text-9xl font-bold select-none">LOG</div>
      {sortedPosts.length > 0 && (
        <a href={`${SITE.base}/posts/${sortedPosts[0].slug}`} class="block h-full relative z-10">
          <div class="text-zinc-400 text-sm mb-2">{new Date(sortedPosts[0].data.pubDatetime).toLocaleDateString()}</div>
          <h2 class="text-3xl font-bold mb-4 group-hover:underline">{sortedPosts[0].data.title}</h2>
          <p class="text-zinc-300 line-clamp-3">{sortedPosts[0].data.description}</p>
        </a>
      )}
    </div>

    <!-- Recent List (Bottom Right) -->
    <div class="col-span-1 md:col-span-2 row-span-1 bg-white dark:bg-zinc-900 rounded-3xl p-6 border border-zinc-100 dark:border-zinc-800">
      <h3 class="font-bold text-lg mb-4 flex items-center gap-2">
        <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
        Recent Activity
      </h3>
      <div class="space-y-3">
        {sortedPosts.slice(1, 4).map((post) => (
          <a href={`${SITE.base}/posts/${post.slug}`} class="block p-3 rounded-xl hover:bg-zinc-50 dark:hover:bg-zinc-800 transition-colors flex justify-between items-center group">
            <span class="font-medium group-hover:text-blue-500 transition-colors">{post.data.title}</span>
            <span class="text-xs text-zinc-400">{new Date(post.data.pubDatetime).toLocaleDateString()}</span>
          </a>
        ))}
      </div>
    </div>
  </div>
</Layout>

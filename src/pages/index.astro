---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import { SITE } from "../config";

const posts = await getCollection("posts");
const sortedPosts = posts.sort(
  (a, b) =>
    new Date(b.data.pubDatetime).valueOf() -
    new Date(a.data.pubDatetime).valueOf()
);
---

<Layout title="Home">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 p-4 max-w-6xl mx-auto min-h-[calc(100vh-2rem)] items-center">
    <!-- Profile Card (Top Left) -->
    <div class="col-span-1 md:col-span-1 row-span-2 bg-white dark:bg-zinc-900 rounded-3xl p-8 border border-zinc-100 dark:border-zinc-800 flex flex-col justify-between h-full min-h-[400px] shadow-sm relative overflow-hidden group">
      <!-- Background Glow -->
      <div class="absolute -top-20 -left-20 w-40 h-40 bg-blue-500/20 rounded-full blur-3xl group-hover:bg-blue-500/30 transition-all duration-700"></div>
      
      <div>
        <div class="w-20 h-20 rounded-2xl bg-zinc-100 dark:bg-zinc-800 mb-6 overflow-hidden border-2 border-white dark:border-zinc-700 shadow-md">
          <img src="https://api.dicebear.com/9.x/bottts-neutral/png?seed=Derek" alt="Avatar" class="w-full h-full object-cover" />
        </div>
        <h1 class="text-4xl font-bold mb-2 tracking-tight text-zinc-900 dark:text-white">Derek Mayor</h1>
        <p class="text-zinc-500 dark:text-zinc-400 font-medium mb-6 uppercase text-xs tracking-wider">System Orchestrator</p>
        <p class="text-zinc-600 dark:text-zinc-300 leading-relaxed">
          "Connectivity is the foundation; features are secondary."
        </p>
      </div>

      <div class="mt-8">
        <a href="https://github.com/derekmayor/journal" class="inline-flex items-center gap-2 px-4 py-2 bg-zinc-900 dark:bg-white text-white dark:text-zinc-900 rounded-full text-sm font-bold hover:opacity-90 transition-opacity">
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 2.16 1.44 1.065 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/></svg>
          GitHub
        </a>
      </div>
    </div>

    <!-- Latest Journal (Top Right - Large) -->
    <div class="col-span-1 md:col-span-2 row-span-1 bg-zinc-900 text-white rounded-3xl p-10 relative overflow-hidden group min-h-[300px] flex flex-col justify-center">
      <div class="absolute -right-10 -bottom-10 opacity-10 text-[12rem] font-bold select-none leading-none">LOG</div>
      {sortedPosts.length > 0 && (
        <a href={`${SITE.base}/posts/${sortedPosts[0].slug}`} class="block relative z-10">
          <div class="flex items-center gap-3 mb-4">
            <span class="px-3 py-1 bg-white/10 rounded-full text-xs font-medium backdrop-blur-sm border border-white/10">Latest Entry</span>
            <span class="text-zinc-400 text-sm">{new Date(sortedPosts[0].data.pubDatetime).toLocaleDateString()}</span>
          </div>
          <h2 class="text-4xl md:text-5xl font-bold mb-6 group-hover:underline decoration-2 underline-offset-4 decoration-zinc-500">{sortedPosts[0].data.title}</h2>
          <p class="text-zinc-300 text-lg line-clamp-2 max-w-2xl">{sortedPosts[0].data.description}</p>
        </a>
      )}
    </div>

    <!-- Recent List (Bottom Right) -->
    <div class="col-span-1 md:col-span-2 row-span-1 bg-white dark:bg-zinc-900 rounded-3xl p-8 border border-zinc-100 dark:border-zinc-800 min-h-[300px]">
      <div class="flex justify-between items-center mb-6">
        <h3 class="font-bold text-xl flex items-center gap-2">
          <span class="relative flex h-3 w-3">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-3 w-3 bg-green-500"></span>
          </span>
          System Log
        </h3>
        <span class="text-xs font-mono text-zinc-400">STATUS: ONLINE</span>
      </div>
      
      <div class="grid gap-3">
        {sortedPosts.slice(1, 4).map((post) => (
          <a href={`${SITE.base}/posts/${post.slug}`} class="group flex items-center justify-between p-4 rounded-2xl bg-zinc-50 dark:bg-zinc-800/50 hover:bg-zinc-100 dark:hover:bg-zinc-800 transition-all border border-transparent hover:border-zinc-200 dark:hover:border-zinc-700">
            <div>
              <span class="block font-semibold text-zinc-900 dark:text-zinc-100 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">{post.data.title}</span>
              <span class="text-xs text-zinc-500 dark:text-zinc-400 line-clamp-1 mt-1">{post.data.description}</span>
            </div>
            <span class="text-xs font-mono text-zinc-400 whitespace-nowrap ml-4">{new Date(post.data.pubDatetime).toLocaleDateString()}</span>
          </a>
        ))}
      </div>
    </div>
  </div>
</Layout>
